{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": { "type": "string" },
      "args": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "type": { "type": "string" }
          },
          "required": ["name", "type"]
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "flag": { "type": "string" }
        },
        "required": ["type", "flag"]
      },
      "tests": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "input": {
              "type": "array",
              "items": { "type": "string" }
            },
            "expect": { "type": "string" }
          },
          "required": ["name", "input", "expect"]
        }
      }
    },
    "required": ["name", "args", "result", "tests"]
  }
}
